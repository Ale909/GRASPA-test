<Robot Type="Panda" RootNode="gripper_root">

  <!-- Link and joint definition -->

  <RobotNode name="gripper_root">
    <Child name="gripper_hand"/>
    <Child name="panda_tcp"/>
    <Child name="panda_gcp"/>
  </RobotName>

  <RobotNode name="gripper_hand">
    <Transform>
      <Translation x="0" y="0" z="0" />
    </Transform>
    <Visualization>
      <File type="Inventor">iv/hand.iv</File>
    </Visualization>
    <CollisionModel>
      <File type="Inventor">iv/hand.iv</File>
    </CollisionModel>
    <Child name="hand_finger_1_joint_1"/>
    <Child name="hand_finger_1_joint_2"/>
    <Child name="hand_finger_2_joint_1"/>
    <Child name="hand_finger_2_joint_2" />
  </RobotNode>

  <RobotNode name="hand_finger_1_joint_1">
    <Transform>
      <Translation x="-0.1" y="40" z="58.4"/>
    </Transform>
    <Joint type="prismatic">
      <TranslationDirection x="0" y="-1" z="0"/>
      <Limits lo="0" hi="40" units="mm"/>
    </Joint>
    <Visualization>
      <File type="Inventor">iv/finger1_half1.iv</File>
    </Visualization>
    <CollisionModel>
      <File type="Inventor">iv/finger1_half1_collision.iv</File>
    </CollisionModel>
  </RobotNode>

  <RobotNode name="hand_finger_1_joint_2">
    <Transform>
      <Translation x="0.1" y="40" z="58.4"/>
    </Transform>
    <Joint type="prismatic">
      <TranslationDirection x="0" y="-1" z="0"/>
      <Limits lo="0" hi="40" units="mm"/>
    </Joint>
    <Visualization>
      <File type="Inventor">iv/finger1_half2.iv</File>
    </Visualization>
    <CollisionModel>
      <File type="Inventor">iv/finger1_half2_collision.iv</File>
    </CollisionModel>
  </RobotNode>

  <RobotNode name="hand_finger_2_joint_1">
    <Transform>
      <Translation x="0.1" y="-40" z="58.4"/>
    </Transform>
    <Joint type="prismatic">
      <TranslationDirection x="0" y="1" z="0"/>
      <Limits lo="0" hi="40" units="mm"/>
    </Joint>
    <Visualization>
      <File type="Inventor">iv/finger2_half1.iv</File>
    </Visualization>
    <CollisionModel>
      <File type="Inventor">iv/finger2_half1_collision.iv</File>
    </CollisionModel>
  </RobotNode>

  <RobotNode name="hand_finger_2_joint_2">
    <Transform>
      <Translation x="-0.1" y="-40" z="58.4"/>
    </Transform>
    <Joint type="prismatic">
      <TranslationDirection x="0" y="1" z="0"/>
      <Limits lo="0" hi="40" units="mm"/>
    </Joint>
    <Visualization>
      <File type="Inventor">iv/finger2_half2.iv</File>
    </Visualization>
    <CollisionModel>
      <File type="Inventor">iv/finger2_half2_collision.iv</File>
    </CollisionModel>
  </RobotNode>

  <RobotNode name="panda_tcp">
    <Transform>
      <Translation x="0" y="0" z="105"/>
    </Transform>
  </RobotNode>

  <RobotNode name="panda_gcp">
    <Transform>
      <Translation x="0" y="0" z="105"/>
    </Transform>
  </RobotNode>

  <!-- End Effector -->

  <Endeffector name="Panda Hand" base="gripper_root" tcp="panda_tcp" gcp="panda_tcp">

    <Preshape name="Grasp Preshape">
      <Node name="hand_finger_1_joint_1" unit="mm" value="0"/>
      <Node name="hand_finger_1_joint_2" unit="mm" value="0"/>
      <Node name="hand_finger_2_joint_1" unit="mm" value="0"/>
      <Node name="hand_finger_2_joint_2" unit="mm" value="0"/>
    </Preshape>

    <Static>
      <Node name="gripper_root"/>
      <Node name="gripper_hand"/>
    </Static>

    <Actor name="finger_1_1">
      <Node name="hand_finger_1_joint_1" considerCollisions="Actors" direction="1"/>
    </Actor>

    <Actor name="finger_1_2">
      <Node name="hand_finger_1_joint_2" considerCollisions="Actors" direction="1"/>
    </Actor>

    <Actor name="finger_2_1">
      <Node name="hand_finger_2_joint_1" considerCollisions="Actors" direction="1"/>
    </Actor>

    <Actor name="finger_2_2">
      <Node name="hand_finger_2_joint_2" considerCollisions="Actors" direction="1"/>
    </Actor>

  </Endeffector>

</Robot>
